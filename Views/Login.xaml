<Page x:Class="RightHelp___Aida.Views.Registro_Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registro_Login">

    <Grid Background="#111111">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Width="300" HorizontalAlignment="Center" Background="#1e1e1e">
            <TextBlock Text="Acessar Aida" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <TextBox x:Name="UsernameBox" Margin="0 0 0 10" Height="35" />
            <PasswordBox x:Name="PasswordBox" Margin="0 0 0 10" Height="35" />

            <Button Content="Entrar" Click="Login_Click" Background="#0078D7" Foreground="White" Height="35" Margin="0 10 0 10" />

            <TextBlock Foreground="Gray" FontSize="12" HorizontalAlignment="Center">
                <Run Text="Não tem conta? " />
                <Run Text="Cadastre-se" TextDecorations="Underline" Foreground="LightBlue" Cursor="Hand" MouseDown="RegisterLink_Click"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
