<Page x:Class="RightHelp___Aida.Views.Registro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registro">

    <Grid Background="#111111">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Width="300" HorizontalAlignment="Center" Background="#1e1e1e" Padding="30" CornerRadius="10">
            <TextBlock Text="Criar Conta" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <TextBox x:Name="FirstNameBox" PlaceholderText="Nome" Margin="0 0 0 10" Height="35"/>
            <TextBox x:Name="EmailBox" PlaceholderText="E-mail" Margin="0 0 0 10" Height="35"/>
            <TextBox x:Name="UsernameBox" PlaceholderText="Usuário" Margin="0 0 0 10" Height="35"/>
            <PasswordBox x:Name="PasswordBox" Margin="0 0 0 10" Height="35"/>

            <Button Content="Registrar" Click="Register_Click" Background="#0078D7" Foreground="White" Height="35" Margin="0 10 0 10" />

            <TextBlock Foreground="Gray" FontSize="12" HorizontalAlignment="Center">
                <Run Text="Já tem uma conta? " />
                <Run Text="Entrar" TextDecorations="Underline" Foreground="LightBlue" Cursor="Hand" MouseDown="LoginLink_Click"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
