<Window x:Class="RightHelp___Aida.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:RightHelp___Aida.Controls"
        xmlns:local="clr-namespace:RightHelp___Aida"
        mc:Ignorable="d"
        Title="Aida" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/Assets/Images/Background 4k.png" Stretch="Fill"/>
    </Window.Background>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <controls:RespostaTextBox x:Name="RespostaControl"
                                 Grid.Row="0"
                                 Margin="20"
                                 VerticalAlignment="Stretch"
                                 HorizontalAlignment="Stretch" />

        <Button Content="OnSendClick"
                Width="150" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,250,0,0"
                Click="OnSendClick" />

        <controls:MenuButton x:Name="ButtonMenu" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- VoiceCircle no centro da área superior -->
        <controls:VoiceCircle x:Name="VoiceCircleControl"
                              Grid.Row="0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RenderTransformOrigin="0.5,0.5">
            <!-- RenderTransform sem nome -->
            <controls:VoiceCircle.RenderTransform>
                <TranslateTransform />
            </controls:VoiceCircle.RenderTransform>
        </controls:VoiceCircle>

        <!-- Input expansível com Scroll -->
        <Border Grid.Row="1"
                Background="#AA000000"
                Padding="10"
                BorderThickness="1"
                BorderBrush="Gray"
                Margin="20">
            <ScrollViewer x:Name="InputScrollViewer"
                VerticalScrollBarVisibility="Auto"
                MaxHeight="200">
                <TextBox x:Name="UserInputBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Hidden"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         FontSize="16"
                         TextChanged="UserInputBox_TextChanged"/>
            </ScrollViewer>
        </Border>

        <Border x:Name="Sidebar"
                Width="{Binding ActualWidth, ElementName=MainGrid, ConverterParameter=0.15}"
                Background="#FF222222"
                HorizontalAlignment="Left"
                RenderTransformOrigin="0,0"
                Panel.ZIndex="10">
            <!-- ZIndex alto para ficar por cima -->
            <Border.RenderTransform>
                <TranslateTransform x:Name="SidebarTransform" X="-1000"/>
            </Border.RenderTransform>

            <StackPanel Margin="10">
                <TextBlock Foreground="White" FontSize="16" Text="Configurações"/>
                <!-- Coloque aqui seus controles de configuração -->
            </StackPanel>
        </Border>
    </Grid>
</Window>