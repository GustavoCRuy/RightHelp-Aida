<Window x:Class="RightHelp___Aida.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:RightHelp___Aida.Controls"
        xmlns:local="clr-namespace:RightHelp___Aida"
        mc:Ignorable="d"
        Title="Aida" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/Assets/Images/Background 4k.png" Stretch="Fill"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Botão de teste e Menu fixos -->
        <Button Content="Testar Animação"
                Width="150" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,384,0,0"
                Click="TestAnimation_Click"/>

        <controls:MenuButton x:Name="ButtonMenu" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- VoiceCircle no centro da área superior -->
        <controls:VoiceCircle x:Name="VoiceCircleControl"
                              Grid.Row="0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RenderTransformOrigin="0.5,0.5">
            <!-- RenderTransform sem nome -->
            <controls:VoiceCircle.RenderTransform>
                <TranslateTransform />
            </controls:VoiceCircle.RenderTransform>
        </controls:VoiceCircle>

        <!-- Input expansível com Scroll -->
        <Border Grid.Row="1"
                Background="#AA000000"
                Padding="10"
                BorderThickness="1"
                BorderBrush="Gray"
                Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          MaxHeight="200">
                <TextBox x:Name="UserInputBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Hidden"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         FontSize="16"
                         TextChanged="UserInputBox_TextChanged"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>