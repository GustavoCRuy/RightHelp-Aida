<UserControl x:Class="RightHelp___Aida.Controls.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RightHelp___Aida.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Width="40" Height="40" Click="Button_Click"
        Background="#AA222222" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Rectangle Height="4" Width="23" Fill="LightGray" Margin="0,2" RadiusX="2" RadiusY="2"/>
                <Rectangle Height="4" Width="23" Fill="LightGray" Margin="0,2" RadiusX="2" RadiusY="2"/>
                <Rectangle Height="4" Width="23" Fill="LightGray" Margin="0,2" RadiusX="2" RadiusY="2"/>
            </StackPanel>
            
        </Button>
    </Grid>
</UserControl>
