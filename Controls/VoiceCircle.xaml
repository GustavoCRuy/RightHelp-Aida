<UserControl x:Class="RightHelp___Aida.Controls.VoiceCircle"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:conv="clr-namespace:RightHelp___Aida.Converters"
             xmlns:local="clr-namespace:RightHelp___Aida.Controls"  
             mc:Ignorable="d"  
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <conv:HalfConverter x:Key="HalfConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!-- Círculo visual -->
        <Ellipse x:Name="VoiceEllipse"
                 Width="150" Height="150"
                 Fill="#0f9bdb"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Opacity="0.85">
            <Ellipse.RenderTransform>
                <ScaleTransform x:Name="VoiceCircleScale" ScaleX="1" ScaleY="1"/>
            </Ellipse.RenderTransform>
            <Ellipse.RenderTransformOrigin>0.5,0.5</Ellipse.RenderTransformOrigin>
            <Ellipse.Effect>
                <DropShadowEffect Color="Blue" BlurRadius="20" ShadowDepth="0"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Caminho invisível para a animação -->
        <Canvas IsHitTestVisible="False">
            <!-- Linha preta para visualização da trajetória do ponto -->
            <Path x:Name="OrbitPath" Stroke="Transparent" Fill="Transparent">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="75, 0">
                            <ArcSegment Point="75, 150" Size="75, 75" SweepDirection="Clockwise" IsLargeArc="True" />
                            <ArcSegment Point="75, 0" Size="75, 75" SweepDirection="Clockwise" IsLargeArc="True" />
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- Dot começa no centro da elipse -->
            <Ellipse x:Name="Dot"
                Width="10" Height="10"
                Fill="White">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="DotTransform"/>
                </Ellipse.RenderTransform>
            </Ellipse>
        </Canvas>

        <!-- Texto composto AI.da -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0.85">
            <TextBlock Text="AI"
                       FontSize="45"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="DotTxt"
                       Text="."
                       FontSize="45"
                       FontWeight="Bold"
                       Foreground="Transparent"
                       VerticalAlignment="Center"/>
            <TextBlock Text="da"
                       FontSize="45"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
