<UserControl x:Class="RightHelp___Aida.Controls.RespostaTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RightHelp___Aida.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#AA000000" Padding="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="RespostaTextBoxControl"
                     IsReadOnly="True"
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"
                     FontSize="16"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Hidden" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
